{
    "manifest_version": 2,
  
    "name": "Copy With Some Paste",
    "description": "This extension allows the user to paste text to a universal account specific paste box and operate multiple clipboards.",
    "version": "0.0.0.1",
  
    "browser_action": {
      "default_icon": "icons/icon-logo-19.png",
      "default_popup": "popup.html",
      "default_title": "Copy With Some Paste"
    },

    "icons": { 
      "16": "icons/icon-logo-16.png",
      "19": "icons/icon-logo-19.png",
      "38": "icons/icon-logo-38.png",
      "48": "icons/icon-logo-48.png",
     "128": "icons/big-logo-128.png" 
    },

    "permissions": [
      "activeTab",
      "storage",
      "clipboardRead"
    ],

    "background": {
      "scripts": ["oncopy.js"],
      "persistent": false
    },

    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["contentScript.js"]
      }
    ]
}
